@model Order
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrderState)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrderState)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Total)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Total)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Username)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Username)
        </dd>
    </dl>
</div>
<div class="alert alert-info w-75" role="alert">
    @Model.OrderLines.Count
</div>
<table class="table table-bordered table-striped w-75">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Product Price</th>
            <th>Product Quantity</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderLines)
        {
            <tr>
                <td>@item.Product.Name</td>
                <td>@item.Product.Price</td>
                <td>@item.Quantity</td>
                <td>@((item.Product.Price * item.Quantity).ToString("c"))</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3">Total Price</td>
            <td>@Model.Total</td>
        </tr>
    </tfoot>
</table>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">OrderState Edit</a> |
    <a asp-action="Index" class="btn btn-dark">Back to List</a>
</div>

