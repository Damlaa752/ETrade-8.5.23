@model ETrade.Entity.Models.ViewModels.SignInViewModel
@{
    ViewData["Title"] = "SignIn";
}

<h1>SignIn</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="UsernameOrEmail" class="control-label"></label>
        <input asp-for="UsernameOrEmail" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password" class="control-label"></label>
        <input asp-for="Password" type="password" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="RememberMe" class="form-check-input</label>
        <input asp-for="RememberMe"  class="form-control" />
    </div>
    <div class="form-group">
        <input value="Login" type="submit" class="btn btn-primary" />
    </div>
</form>

